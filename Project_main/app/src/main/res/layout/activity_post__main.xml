<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/pframe_iv"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/postframe"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dip"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp">

        <EditText
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:id="@+id/from_et"
            android:layout_below="@+id/from_tv"
            android:layout_alignLeft="@+id/from_tv"
            android:layout_alignStart="@+id/from_tv"
            android:layout_marginLeft="100sp"
            android:textSize="30px"
            android:textColor="#000000"
            android:hint="請輸入出發地"
            android:textColorHint="#f20606" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="230dp"
        android:layout_height="22dp"
        android:layout_weight="0.06"
        android:id="@+id/linearLayout7"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/linearLayout8"
        android:layout_alignLeft="@+id/linearLayout8"
        android:layout_alignStart="@+id/linearLayout8">

        <Spinner
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:id="@+id/pnum_sp"
            android:layout_alignBottom="@+id/pnum_tv"
            android:layout_alignTop="@+id/pnum_tv"
            android:layout_toRightOf="@+id/pneed_tv"
            android:layout_marginLeft="95dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="230dp"
        android:layout_height="25dp"
        android:weightSum="1"
        android:id="@+id/linearLayout6"
        android:layout_above="@+id/linearLayout7"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/pdate_ib"
            android:src="@drawable/pdate"
            android:background="@null"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_alignLeft="@+id/pprice_rb"
            android:layout_alignStart="@+id/pprice_rb"
            android:layout_alignTop="@+id/pdate_tv"
            android:layout_alignRight="@+id/pprice_rb"
            android:layout_alignEnd="@+id/pprice_rb"
            android:clickable="true"
            android:layout_weight="0.10"
            android:layout_marginLeft="70dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ptime_ib"
            android:background="@null"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ptime"
            android:layout_alignTop="@+id/pdate_ib"
            android:layout_alignBottom="@+id/pdate_ib"
            android:layout_alignRight="@+id/calltaxi_tv"
            android:layout_alignEnd="@+id/calltaxi_tv"
            android:layout_alignLeft="@+id/calltaxi_tv"
            android:layout_alignStart="@+id/calltaxi_tv"
            android:clickable="true"
            android:layout_marginLeft="50dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:layout_alignBottom="@+id/pframe_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:id="@+id/frameLayout2">

        <ImageButton
            android:layout_width="126dp"
            android:layout_height="42dp"
            android:id="@+id/send_ib"
            android:background="@null"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/postbutton"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/pprice_rb"
            android:layout_alignStart="@+id/pprice_rb"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="發文"
            android:id="@+id/send__tv"
            android:textSize="50px"
            android:textColor="#000000"
            android:layout_alignTop="@+id/send_ib"
            android:layout_alignLeft="@+id/findpassenger_tv"
            android:layout_alignStart="@+id/findpassenger_tv"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frameLayout2"
        android:layout_alignLeft="@+id/frameLayout2"
        android:layout_alignStart="@+id/frameLayout2"
        android:id="@+id/linearLayout4">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finddriver_rb"
            android:checked="false"
            android:layout_marginLeft="35dp"
            android:visibility="invisible" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findpassenger_rb"
            android:checked="false"
            android:layout_marginLeft="30dp"
            android:visibility="invisible"
            style="#000000" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calltaxi_rb"
            android:checked="false"
            android:layout_marginLeft="30dp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="230dp"
        android:layout_height="29dp"
        android:layout_weight="0.07"
        android:id="@+id/linearLayout5"
        android:layout_alignTop="@+id/linearLayout7"
        android:layout_alignRight="@+id/frameLayout2"
        android:layout_alignEnd="@+id/frameLayout2"
        android:layout_marginTop="30dp">

        <RadioButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/pprice_rb"
            android:checked="false"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/pneed_tv"
            android:layout_toRightOf="@+id/to_tv"
            android:layout_toEndOf="@+id/to_tv"
            android:layout_marginLeft="65dp" />

        <Spinner
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:id="@+id/pprice_sp"
            android:spinnerMode="dropdown"
            android:layout_alignBottom="@+id/linearLayout8"
            android:layout_alignRight="@+id/to_et"
            android:layout_alignEnd="@+id/to_et"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4"
        android:layout_marginBottom="55dp"
        android:id="@+id/linearLayout8"
        android:weightSum="1">

        <EditText
            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:id="@+id/pnote_et"
            android:layout_below="@+id/pneed_tv"
            android:layout_alignLeft="@+id/pprice_tv"
            android:layout_alignStart="@+id/pprice_tv"
            android:textColor="#000000"
            android:layout_marginLeft="25sp"
            android:layout_weight="0.03"
            android:hint="請輸入備註"
            android:textColorHint="#f11515" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout6">

        <EditText
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:id="@+id/to_et"
            android:textSize="30px"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/linearLayout6"
            android:layout_alignRight="@+id/linearLayout7"
            android:layout_alignEnd="@+id/linearLayout7"
            android:layout_marginLeft="100dp"
            android:textColorHint="#f41313"
            android:hint="請輸入目的地" />
    </LinearLayout>

</RelativeLayout>
